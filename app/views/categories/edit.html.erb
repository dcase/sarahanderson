<h1>Editing category</h1>

<% form_for(@category, :html => { :multipart => true }) do |f| %>
  <%= render :partial => 'fields', :locals => { :f => f } %>
  <%= render :partial => 'rollovers/preview', :locals => { :rollover => @rollover } unless !@rollover %>
  <%= render :partial => 'rollovers/fields_include', :locals => { :rollover => @rollover }  %>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Back', @category %>
