<h1>New piece</h1>

<% form_for([@category,@piece], :html => { :multipart => true }) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :client_name %><br />
    <%= f.text_field :client_name %>
  </p>
  <p>
    <%= f.label 'Image:' %><br />
    <%= f.file_field :image %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', category_path(@category) %>
